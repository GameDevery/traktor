# Configuration file

# Toolchain and SDK configuration.
TOOLCHAIN_BIN=$(EMSCRIPTEN)

# Build tools.
CC="$(TOOLCHAIN_BIN)\emcc"
CC_FLAGS_COMMON=-D __EMSCRIPTEN__
CC_FLAGS_DEBUG_STATIC=$(CC_FLAGS_COMMON) -g -D _UNICODE -D UNICODE
CC_FLAGS_RELEASE_STATIC=$(CC_FLAGS_COMMON) -O2 -D _UNICODE -D UNICODE -D NDEBUG

AR="$(TOOLCHAIN_BIN)\emar"
AR_FLAGS_COMMON=rs
AR_FLAGS_DEBUG_STATIC=$(AR_FLAGS_COMMON)
AR_FLAGS_RELEASE_STATIC=$(AR_FLAGS_COMMON)

LINK="$(TOOLCHAIN_BIN)\emcc"
LINK_FLAGS_COMMON=
LINK_FLAGS_DEBUG_STATIC=$(LINK_FLAGS_COMMON)
LINK_FLAGS_RELEASE_STATIC=$(LINK_FLAGS_COMMON) -O2
LINK_FLAGS_DEBUG_EXECUTABLE=$(LINK_FLAGS_COMMON)
LINK_FLAGS_RELEASE_EXECUTABLE=$(LINK_FLAGS_COMMON) -O2

BINARY_INCLUDE=$(TRAKTOR_HOME)\bin\win32\BinaryInclude
