<?xml version="1.0" encoding="utf-8"?>
<object type="traktor.script.Script" version="1">
	<dependencies/>
	<text>
	<![CDATA[
-- Initialize layer
function layerInit(stage)
end

-- Update layer
function layerUpdate(stage, info)

	local time = info:getSimulationTime()

	local markers = _self:getEntities("Plus")
	for i = 0, markers:length() - 1 do

		local marker = markers:get(i)

		marker:setTransform(Transform(
			Vector4(math.sin(time) * 4, math.sin(time * 0.5) * 3, 0, 1),
			Quaternion(0, 0, 0)
		))

		time = time + 1

	end

end

	]]>
	</text>
</object>
