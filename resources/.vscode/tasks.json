{
    "version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "Platform - DebugShared",
			"group": "build",

			"linux": {
				"command": "${workspaceRoot}/../scripts/build-vscode.sh DebugShared",
				"problemMatcher": [
					"$gcc"
				]
			},

			"windows": {
				"command": "${workspaceRoot}/../scripts/build-vscode.bat Windows DebugShared",
				"problemMatcher": [
					"$msCompile"
				]			
			}
		},

		{
			"type": "shell",
			"label": "Platform - ReleaseShared",
			"group": "build",

			"linux": {
				"command": "${workspaceRoot}/../scripts/build-vscode.sh ReleaseShared",
				"problemMatcher": [
					"$gcc"
				]
			},

			"windows": {
				"command": "${workspaceRoot}/../scripts/build-vscode.bat Windows ReleaseShared",
				"problemMatcher": [
					"$msCompile"
				]			
			}			
		},

		{
			"type": "shell",
			"label": "Android - DebugStatic",
			"group": "build",

			"linux": {
				"command": "${workspaceRoot}/../scripts/build-vscode.sh DebugStatic",
				"problemMatcher": [
					"$gcc"
				]
			},

			"windows": {
				"command": "${workspaceRoot}/../scripts/build-vscode.bat Android DebugStatic",
				"problemMatcher": [
					"$gcc"
				]			
			}			
		},

		{
			"type": "shell",
			"label": "Android - ReleaseStatic",
			"group": "build",

			"linux": {
				"command": "${workspaceRoot}/../scripts/build-vscode.sh ReleaseStatic",
				"problemMatcher": [
					"$gcc"
				]
			},

			"windows": {
				"command": "${workspaceRoot}/../scripts/build-vscode.bat Android ReleaseStatic",
				"problemMatcher": [
					"$gcc"
				]			
			}			
		}		
	]
}