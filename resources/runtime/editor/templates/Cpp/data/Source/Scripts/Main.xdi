<?xml version="1.0" encoding="utf-8"?>
<object type="traktor.script.Script" version="1">
	<dependencies/>
	<text>
	<![CDATA[
-- Main
import(traktor)

Main = inherit(traktor.amalgam.Stage)
Main_meta = { __index = Main }

function Main.new(o)
	o = o or {}
	setmetatable(o, Main_meta)

	return o
end

function Main:update(info)

	-- Get named entity from scene.
	local myEntity = self.world:getEntity("My entity")

	-- Get my custom component from entity.
	local myComponent = myEntity:getComponent(QuadComponent)

	-- Invoke custom method on component to cycle colors.
	myComponent:setColor(Color4f(
		math.sin(info:getSimulationTime() * 1.1) * 0.5 + 0.5,
		math.sin(info:getSimulationTime() * 1.3) * 0.5 + 0.5,
		math.sin(info:getSimulationTime() * 2.1) * 0.5 + 0.5,
		1
	))

end

	]]>
	</text>
</object>
