C_FLAGS_DEBUG_STATIC=$(C_FLAGS_COMMON) -g -D _UNICODE -D UNICODE
C_FLAGS_RELEASE_STATIC=$(C_FLAGS_COMMON) -O2 -D _UNICODE -D UNICODE -D NDEBUG
