# Configuration file

# C/C++

CC_FLAGS=\
	/nologo\
	/EHsc\
	/FS\
	/D "WIN32"\
	/D "_WINDOWS"\
	/D "UNICODE"\
	/D "_UNICODE"\
	/D "_MBCS"

CC_FLAGS_DEBUG=\
	$(CC_FLAGS)\
	/D "_DEBUG"\
	/MP\
	/W3\
	/WX-\
	/Zc:wchar_t\
	/Zc:inline\
	/Zc:forScope\
	/Zi\
	/GS\
	/Gm\
	/Gd\
	/fp:precise\
	/Od\
	/MDd

CC_FLAGS_RELEASE=\
	$(CC_FLAGS)\
	/D "NDEBUG"\
	/MP\
	/W3\
	/WX-\
	/Zc:wchar_t\
	/Zc:inline\
	/Zc:forScope\
	/Zi\
	/GS-\
	/Gm-\
	/GR-\
	/Gd\
	/fp:fast\
	/Ox\
	/Ob2\
	/Oy\
	/Oi\
	/Ot\
	/MD

CC_FLAGS_DEBUG_STATIC=$(CC_FLAGS_DEBUG)
CC_FLAGS_DEBUG_SHARED=$(CC_FLAGS_DEBUG) /D "_USRDLL" /D "_WINDLL"
CC_FLAGS_DEBUG_EXECUTABLE=$(CC_FLAGS_DEBUG)
CC_FLAGS_DEBUG_EXECUTABLE_CONSOLE=$(CC_FLAGS_DEBUG)

CC_FLAGS_RELEASE_STATIC=$(CC_FLAGS_RELEASE)
CC_FLAGS_RELEASE_SHARED=$(CC_FLAGS_RELEASE) /D "_USRDLL" /D "_WINDLL"
CC_FLAGS_RELEASE_EXECUTABLE=$(CC_FLAGS_RELEASE)
CC_FLAGS_RELEASE_EXECUTABLE_CONSOLE==$(CC_FLAGS_RELEASE)

# Librarian
LIB_FLAGS_DEBUG_STATIC=/MACHINE:X64 /NOLOGO
LIB_FLAGS_RELEASE_STATIC=/MACHINE:X64 /NOLOGO

# Linker
LINK_SYSTEM_LIBS=winmm.lib kernel32.lib user32.lib gdi32.lib winspool.lib comdlg32.lib advapi32.lib shell32.lib ole32.lib oleaut32.lib uuid.lib odbc32.lib odbccp32.lib

LINK_FLAGS_DEBUG_SHARED=/DEBUG /DLL /MACHINE:X64 /SUBSYSTEM:WINDOWS /SAFESEH /INCREMENTAL $(LINK_SYSTEM_LIBS)
LINK_FLAGS_DEBUG_EXECUTABLE=/DEBUG /MACHINE:X64 /SUBSYSTEM:WINDOWS /SAFESEH /INCREMENTAL $(LINK_SYSTEM_LIBS)
LINK_FLAGS_DEBUG_EXECUTABLE_CONSOLE=/DEBUG /MACHINE:X64 /SUBSYSTEM:CONSOLE /SAFESEH /INCREMENTAL $(LINK_SYSTEM_LIBS)

LINK_FLAGS_RELEASE_SHARED=/DLL /MACHINE:X64 /SUBSYSTEM:WINDOWS /SAFESEH /INCREMENTAL:NO $(LINK_SYSTEM_LIBS)
LINK_FLAGS_RELEASE_EXECUTABLE=/MACHINE:X64 /SUBSYSTEM:WINDOWS /SAFESEH /INCREMENTAL:NO $(LINK_SYSTEM_LIBS)
LINK_FLAGS_RELEASE_EXECUTABLE_CONSOLE=/MACHINE:X64 /SUBSYSTEM:CONSOLE /SAFESEH /INCREMENTAL:NO $(LINK_SYSTEM_LIBS)

# Misc
BINARY_INCLUDE=$(TRAKTOR_HOME)/bin/win32/BinaryInclude
